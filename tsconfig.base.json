{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@mcp-ui/*": ["packages/*/src"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist", "**/dist", "**/node_modules", "examples", "docs", "tools"]
}
